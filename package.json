{
  "name": "maltan-frontend",
  "version": "1.0.0",
  "description": "우리동네 소개 서비스 프론트엔드",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
